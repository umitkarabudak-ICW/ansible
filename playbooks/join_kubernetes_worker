- name: Install Kubernetes
  hosts: all
  become: true
  tasks:

    - name: Create Kubernetes Cluster
      shell: |
        kubeadm init --cri-socket unix:///rsm-kubernetes/run/containerd/containerd.sock --control-plane-endpoint="{{ control_plane_address }}:6443" --upload-certs --apiserver-advertise-address=0.0.0.0 --pod-network-cidr=192.168.0.0/16 --apiserver-cert-extra-sans={{ cert_extra_dns_addresses }}
